{
  "memory_bank": {
    "database_path": "memory_bank.db",
    "max_storage_days": 90,
    "auto_cleanup_enabled": true,
    "export_format": "json",
    "confidence_threshold": 0.3,
    "enable_duplicate_detection": true
  },
  "model": {
    "version": "v1.0",
    "confidence_threshold": 0.25,
    "nms_threshold": 0.45
  },
  "defect_types": {
    "crazing": {
      "description": "Small cracks appearing in a pattern",
      "severity": "medium",
      "common_locations": ["surface", "edges"]
    },
    "scratches": {
      "description": "Linear marks on the surface",
      "severity": "low",
      "common_locations": ["anywhere"]
    },
    "pitting": {
      "description": "Small holes or pits in the surface",
      "severity": "high", 
      "common_locations": ["surface"]
    },
    "inclusion": {
      "description": "Foreign material embedded in steel",
      "severity": "high",
      "common_locations": ["internal", "surface"]
    },
    "patches": {
      "description": "Irregular surface patches",
      "severity": "medium",
      "common_locations": ["surface"]
    },
    "rolled-in_scale": {
      "description": "Scale rolled into the surface",
      "severity": "medium",
      "common_locations": ["surface"]
    }
  }
}
